<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="boxStrokeErrorColor">@color/color_error</item>
        <item name="errorIconTint">@color/color_error</item>
        <item name="errorTextColor">@color/color_error</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_16dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_16dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_16dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_16dp</item>
    </style>

    <style name="EmailTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="singleLine">true</item>
    </style>

    <style name="PasswordTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:inputType">textPassword</item>
        <item name="singleLine">true</item>
    </style>

    <style name="RoundedBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RoundedBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_white_modal</item>
    </style>
</resources>